# Server Configuration
PORT=5000
NODE_ENV=development

# MySQL / MariaDB Configuration
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASS=password
MYSQL_DB_NAME=praktis_db
MYSQL_DIALECT=mysql

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/praktis_db

# JWT Secret (Generate a strong random string - minimum 32 characters)
# Production: Use a strong random key like: openssl rand -base64 32
JWT_SECRET=your_super_secret_key_change_this_in_production_minimum_32_chars

# Default Admin Credentials (Change in production!)
ADMIN_PASSWORD=ChangeMe@123456

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Optional: For enhanced logging
LOG_LEVEL=debug

# Optional: File upload limits (in MB)
MAX_FILE_SIZE=50
